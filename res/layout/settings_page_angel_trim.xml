<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
            android:id="@+id/dummyImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher" />
    
    <Button
        android:id="@+id/upTrimBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/dummyImageView"
        android:layout_alignParentLeft="false"
        android:layout_centerHorizontal="true"
        android:text="Button" />
    
    

        <Button
        android:id="@+id/downTrimBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_below="@id/dummyImageView"
        android:layout_centerHorizontal="true"
        android:text="Button" />

        <Button
            android:id="@+id/rightTrimBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upTrimBtn"
            android:layout_toRightOf="@+id/upTrimBtn"
            android:text="Button" />

        <Button
            android:id="@+id/leftTrimBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/upTrimBtn"
            android:text="Button" />



</RelativeLayout>